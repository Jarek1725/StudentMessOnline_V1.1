<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mariadb://localhost:3306/studentmess</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.username">root</property>
        <property name="connection.password"></property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="studentMessMaybeWork.studentPlatform.databaseEntities.ActiveEntity"/>
        <mapping class="studentMessMaybeWork.studentPlatform.databaseEntities.ClazzEntity"/>
        <mapping class="studentMessMaybeWork.studentPlatform.databaseEntities.ConversationsEntity"/>
        <mapping class="studentMessMaybeWork.studentPlatform.databaseEntities.DeletedMessagesEntity"/>
        <mapping class="studentMessMaybeWork.studentPlatform.databaseEntities.MessagesEntity"/>
        <mapping class="studentMessMaybeWork.studentPlatform.databaseEntities.ParticipantsEntity"/>
        <mapping class="studentMessMaybeWork.studentPlatform.databaseEntities.UserEntity"/>
        <mapping class="studentMessMaybeWork.studentPlatform.databaseEntities.UserContactEntity"/>
        <!-- <property name="connection.username"/> -->
        <!-- <property name="connection.password"/> -->

        <!-- DB schema will be updated if needed -->
        <!-- <property name="hibernate.hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>